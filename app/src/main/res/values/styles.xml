<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="bigButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:backgroundTint">@color/YP_white</item>
        <item name="cornerRadius">@dimen/defaultCornerRadius</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/defaultTextSizeForTitle</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:letterSpacing">0</item>

        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/defaultPadding</item>
        <item name="iconSize">@dimen/defaultIconSize</item>
        <item name="iconTint">@color/YP_black</item>

    </style>

    <style name="frameLayoutSettingActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settingsLineHeight</item>
        <item name="android:layout_marginStart">@dimen/defaultMargin</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="regularTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>

        <item name="fontFamily">@font/ys_display_regular</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/defaultTextSize</item>
    </style>

    <style name="titleText">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/defaultTextSizeForTitle</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="regularImageSmallView">
        <item name="android:layout_width">@dimen/defaultIconSize</item>
        <item name="android:layout_height">@dimen/defaultIconSize</item>
        <item name="android:layout_gravity">center_vertical|end</item>=
    </style>

    <style name="colorSwitchStyle" parent="Theme.AppCompat.DayNight">

        <item name="colorSwitchThumbNormal">@color/YP_text_gray</item>
        <item name="colorAccent">@color/YP_blue</item>
        <item name="trackTint">@color/switch_color</item>

    </style>

</resources>