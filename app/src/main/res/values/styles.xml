<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="BigButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:backgroundTint">@color/YP_white</item>
        <item name="cornerRadius">@dimen/defaultCornerRadius</item>
        <item name="android:insetTop">@dimen/defaultInset</item>
        <item name="android:insetBottom">@dimen/defaultInset</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/defaultTextSizeForTitle</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>

        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/defaultPadding</item>
        <item name="iconSize">@dimen/defaultIconSize</item>
        <item name="iconTint">@color/YP_black</item>

    </style>

    <style name="SmallButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/defaultTextSizeSmall</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="FrameLayoutSettingActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/defaultFrameLayoutLineHeight</item>
        <item name="android:layout_marginStart">@dimen/defaultMargin</item>
        <item name="android:layout_marginEnd">@dimen/defaultMarginEndSettingsView</item>
    </style>

    <style name="RegularTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>

        <item name="fontFamily">@font/ys_display_regular</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/defaultTextSize</item>
    </style>

    <style name="BigBoldText">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/bigBoldTextSize</item>
        <item name="android:textColor">@color/YP_black</item>
    </style>

    <style name="TitleText">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/defaultTextSizeForTitle</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="RegularText">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/defaultTextSizeSmall</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="RegularBigText" parent="RegularText">
        <item name="android:textSize">@dimen/textSizeForRegularBig</item>
        <item name="android:textColor">@color/YP_black</item>
    </style>

    <style name="TrackDetails">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/defaultTextSizeSmall</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">end</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>

    </style>

    <style name="RegularImageSmallView">
        <item name="android:layout_width">@dimen/defaultIconSize</item>
        <item name="android:layout_height">@dimen/defaultIconSize</item>
        <item name="android:layout_gravity">center_vertical|end</item>=
    </style>

    <style name="EditTextView">

        <item name="android:inputType">text</item>
        <item name="maxLines">1</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:background">@drawable/custom_edit_text_rounded</item>
        <item name="android:drawablePadding">12dp</item>

        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColorHint">?attr/colorTertiary</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:paddingStart">12dp</item>
    </style>

    <style name="DescriptionText">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/textSizeForArtistName</item>
    </style>

    <style name="tabText" parent="TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/textSizeForTabLayout</item>
    </style>

    <style name="bottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="background">@drawable/bottom_background</item>
        <item name="itemTextColor">@color/bottom_navigation_switch</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="itemIconTint">@color/bottom_navigation_switch</item>
        <item name="itemTextAppearanceActive">@style/bottomNavigationText</item>
        <item name="itemTextAppearanceInactive">@style/bottomNavigationText</item>
    </style>

    <style name="bottomNavigationText" parent="bottomNavigationStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TrackInPlaylist">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/textSizeForArtistName</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="MaterialAlertText" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertBodyText</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveMaterialAlertButtonText</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertButtonText</item>

    </style>

    <style name="MaterialAlertDialogText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="MaterialAlertBodyText" parent="MaterialAlertDialog.Material3.Body.Text.CenterStacked">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/defaultTextSizeSmall</item>
        <item name="android:maxEms">25</item>
    </style>

    <style name="MaterialAlertButtonText" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="PositiveMaterialAlertButtonText" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="FrameButtonsInExtendedPlaylistMenu">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="cutCornerStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <dimen name="bigBoldTextSize">24sp</dimen>
    <dimen name="textSizeForRegularBig">18sp</dimen>
</resources>