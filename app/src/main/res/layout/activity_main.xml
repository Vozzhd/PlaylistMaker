<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/YA_blue"
    android:orientation="vertical"

    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    >
    <!--View с текстом Playlist maker-->
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="14dp"

        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/defaultTextSize" />
    <!--Первая кнопка-->

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="3"
        android:backgroundTint="@color/white"

        android:text="@string/textOfFindButton"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/defaultTextSize"
        app:cornerRadius="@dimen/defaultCornerRadius"

        app:icon="@drawable/magnifier"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconSize="@dimen/defaultIconSize"
        app:iconTint="@color/black"

        />
    <!--Вторая кнопка-->
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="3"
        android:backgroundTint="@color/white"

        android:text="@string/textOfMediaButton"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/defaultTextSize"
        app:cornerRadius="@dimen/defaultCornerRadius"

        app:icon="@drawable/noteicon"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconSize="@dimen/defaultIconSize"
        app:iconTint="@color/black"

        />
    <!--Третья кнопка-->
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="3"
        android:backgroundTint="@color/white"

        android:text="@string/textOfSettingsButton"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/defaultTextSize"
        app:cornerRadius="@dimen/defaultCornerRadius"

        app:icon="@drawable/gearicon"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconSize="@dimen/defaultIconSize"
        app:iconTint="@color/black"

        />
</LinearLayout>


